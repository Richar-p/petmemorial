<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;" id="success-toast">
  <div class="toast" style="position: absolute; top: 2%; right: 2%;">
    <div class="toast-header">
      <strong class="mr-auto"><%= t('content.pop-ups.form.thank') %></strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body">
      <%= t('content.pop-ups.form.ok') %>
    </div>
  </div>
</div>